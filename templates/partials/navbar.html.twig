<header>
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-palette-fill" viewBox="0 0 16 16">
                    <path d="M12.433 10.07C14.133 10.585 16 11.15 16 8a8 8 0 1 0-8 8c1.996 0 1.826-1.504 1.649-3.08-.124-1.101-.252-2.237.351-2.92.465-.527 1.42-.237 2.433.07M8 5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m4.5 3a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3M5 6.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m.5 6.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3"/>
                </svg>
                Galerie d'Art
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_home') }}">Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_gallery') }}">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about') }}">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_team') }}">Team</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex">
                {% if app.user %}
                    {# Bouton d'accès à l'interface admin, uniquement accessible quand on est connecté avec le role Admin #}
                    {% if is_granted('ROLE_ADMIN')%}
                        <a href="{{ path('admin_painting_index')}}" class="btn btn-warning me-3">
                            <i class="bi bi-gear-fill"></i>Administration
                        </a>
                    {% endif %}

                    {# nom du user connecté et bouton connexion/deconnexion #}
                    <span class="navbar-text me-3"> {{ app.user.pseudo }} </span>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger"><i class="bi bi-box-arrow-right"></i> Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Connexion</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>
